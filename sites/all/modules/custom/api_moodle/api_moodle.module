  } else {
    return '';
  }

  $account = user_load($uid);
  $username = $account->name;

  // Check user owner or admin
  if (user_access('view program pages') || $user->uid == $uid) {
    $program = api_moodle_get_program($program_id);

    // Get Final Exam
    $module = $program->modules[$state][$operator_type][0];
